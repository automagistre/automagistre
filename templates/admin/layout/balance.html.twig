{% if wallets is not empty %}
    <style>
        .balance__head {
            color: white;
            font-weight: bold;
            font-size: 18px;

        }
        .balance__head:hover {
            color: black;
        }
    </style>

    <ul class="nav navbar-nav" style="margin-right: 10px">
        {% for wallet in wallets %}
            {# @var wallet \App\Entity\Wallet #}
            <li>
                <a href="{{ easyadmin_path('WalletTransaction', 'list', {'wallet_id': wallet|toId}) }}" class="balance__head">
                    {{ wallet.name }}:
                    <span id="wallet-{{ wallet.toId }}-amount">{{ wallet|balance|localize_money }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
