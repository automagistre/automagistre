{% set requisites = state.tenant.getRequisites() %}

<header class="header">
    <div class="header__logo">
        <img src="{{ asset('assets/img/' ~ requisites.logo) }}" alt="{{ requisites.name }}">
    </div>
    <div class="header_contacts">
        <ul>
            {% for telephone in requisites.telephones %}
                <li class="header_contacts__phone">{{ telephone }}</li>
            {% endfor %}
        </ul>
        <ul>
            <li class="header_contacts__item">{{ requisites.site }}</li>
            <li class="header_contacts__item">{{ requisites.email }}</li>
        </ul>
    </div>
</header>
