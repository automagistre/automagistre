{% block main %}
    <div class="row">
        <div class="col-md-6">
            {% if form is defined %}
                {{ form_start(form) }}
            {% endif %}

            <div class="field-group">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">{% block panel_title %}{{ header|default }}{% endblock %}</h3>
                    </div>

                    <div class="box-body">
                        {% block panel_body -%}
                            {% if form is defined %}
                                {{ form_widget(form) }}
                            {% endif %}
                        {%- endblock %}
                    </div>

                    {% block div_footer %}
                        <div class="box-footer">
                            {% block panel_footer %}
                                {% if form is defined %}
                                    <button class="btn btn-success" type="submit">Сохранить</button>
                                {% endif %}
                            {% endblock %}

                            <a href="{{ easyadmin_path('Order', 'show', {'id': order|toId}) }}" class="btn btn-primary">Отмена</a>
                        </div>
                    {% endblock %}
                </div>
            </div>
            {% if form is defined %}
                {{ form_end(form) }}
            {% endif %}
        </div>

        <div class="col-md-6">
            {{ order_info(order) }}
        </div>
    </div>
{% endblock %}
