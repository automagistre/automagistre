{# @var user \App\Entity\Landlord\User #}
{# @var createdAt \DateTimeInterface #}

{% set person = user.person %}

{%- apply spaceless -%}
    <a href="{{ easyadmin_path(person ? person : user, 'show') }}">
        <i class="fa fa-user"
           data-toggle="tooltip"
           data-placement="bottom"
           title="{{ createdAt|format_date }} {{ person ? person.fullName : user }}"></i>
    </a>
{%- endapply %}
